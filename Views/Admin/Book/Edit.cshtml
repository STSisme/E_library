@model E_Library.Model.Book

@{
    ViewData["Title"] = "✏️ Edit Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">✏️ Edit Book</h2>

<form method="post" action="/Admin/Book/Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Book_Id" value="@Model.Book_Id" />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input name="Title" value="@Model.Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Author</label>
        <input name="Author" value="@Model.Author" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Genre</label>
        <input name="Genre" value="@Model.Genre" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <input name="Category" value="@Model.Category" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea name="Description" class="form-control" rows="3">@Model.Description</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" step="0.01" name="Price" value="@Model.Price" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input type="number" name="Stock" value="@Model.Inventory?.Stock" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Discount Price ($)</label>
        <input type="number" step="0.01" name="DiscountPrice" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="IsOnSale" value="true" />
        <label class="form-check-label">On Sale</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Sale Start Date</label>
        <input type="datetime-local" name="SaleStartDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Sale End Date</label>
        <input type="datetime-local" name="SaleEndDate" class="form-control" />
    </div>

    <!-- New fields for bestseller, award winner, and coming soon -->
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="IsBestseller" value="true" @(Model.IsBestseller ? "checked" : "") />
        <label class="form-check-label">Bestseller</label>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="IsAwardWinner" value="true" @(Model.IsAwardWinner ? "checked" : "") />
        <label class="form-check-label">Award Winner</label>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="IsComingSoon" value="true" @(Model.IsComingSoon ? "checked" : "") />
        <label class="form-check-label">Coming Soon</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Published Date</label>
        <input type="date" name="PublishedDate" value="@Model.PublishedDate.ToString("yyyy-MM-dd")" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">💾 Save</button>
    <a href="/Admin/Book/Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
