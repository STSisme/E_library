@model E_Library.ViewModels.HomePageViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "E-Library Home";
}

<div class="container">
    <!-- Hero Banner -->
    <div class="hero-section text-center">
        <div class="hero-content">
            <h1>Welcome to the E-Library</h1>
            <p>Explore a world of books, order your favorites, and engage with reviews from fellow readers!</p>
            <a href="/Books" class="btn btn-primary">Explore Books</a>
        </div>
    </div>

    <!-- Genre Filters -->
    <div class="genre-filters text-center my-4">
        @foreach (var genre in Model.Genres)
        {
            <a href="/Books?genre=@genre" class="btn btn-outline-secondary btn-sm m-1">@genre</a>
        }
    </div>

    <!-- Categorized Book Carousels -->
 @foreach (var group in Model.CategorizedBooks)
{
    <h4 class="mt-5">@group.Key</h4>
    @if (group.Value.Any())  
    {
        <div class="d-flex overflow-auto genre-slider">
            @foreach (var book in group.Value)
            {
                <partial name="~/Views/Shared/_BookCard.cshtml" model="book" />
            }
        </div>
    }
    else
    {
        <p>No books available in this category.</p>
    }
}


    <!-- Features Section -->
    <div class="features-section text-center">
        <h2>Our Features</h2>
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Wide Range of Books</h3>
                        <p>Browse a diverse collection of books across all genres.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Order Online</h3>
                        <p>Enjoy fast and easy book ordering from home.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Reviews</h3>
                        <p>Read and share reviews with fellow book lovers.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Testimonials -->
    <div class="testimonials-section mt-5 py-4 bg-light text-center">
        <h2>What Our Users Say</h2>
        <div class="testimonials d-flex flex-wrap justify-content-center">
            <div class="testimonial col-md-5 m-2">
                <p>"A fantastic library with an amazing variety of books. Highly recommend!"</p>
                <span>- John Doe</span>
            </div>
            <div class="testimonial col-md-5 m-2">
                <p>"I love how easy it is to order books online. Great service!"</p>
                <span>- Jane Smith</span>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="contact-section text-center my-5">
        <h2>Contact Us</h2>
        <p>Have any questions? Reach out and we’ll get back to you shortly.</p>
        <a href="/Contact" class="btn btn-primary">Contact Us</a>
    </div>
</div>


@section Styles {
    <style>
        /* Hero */
        .hero-section {
            background-color: #007bff;
            color: white;
            padding: 60px 20px;
            border-radius: 10px;
        }

            .hero-section h1 {
                font-size: 2.8rem;
            }

        /* Card Styling */
        .book-card {
            width: 160px;
        }

        /* Features */
        .features-section {
            padding: 60px 0;
            background: #f8f9fa;
        }

            .features-section h2 {
                font-weight: bold;
                margin-bottom: 40px;
            }

        .feature-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            }

            .feature-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
            }

            .feature-card p {
                font-size: 1rem;
                color: #555;
            }
        /* Testimonials */
        .testimonial {
            background-color: #fff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

            .testimonial p {
                font-style: italic;
            }

            .testimonial span {
                font-weight: bold;
            }
    </style>
}
