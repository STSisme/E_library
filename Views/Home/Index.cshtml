@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "E-Library Home";
}

<div class="container">
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome to the E-Library</h1>
            <p>Explore a world of books, order your favorites, and engage with reviews from fellow readers!</p>
            <a href="/Books" class="btn btn-primary">Explore Books</a>
        </div>
    </div>

    <div class="features-section">
        <h2>Our Features</h2>
        <div class="features">
            <div class="feature-card">
                <h3>Wide Range of Books</h3>
                <p>Browse through a diverse collection of books across different genres.</p>
            </div>
            <div class="feature-card">
                <h3>Order Online</h3>
                <p>Order books from the comfort of your home with just a few clicks.</p>
            </div>
            <div class="feature-card">
                <h3>Reviews</h3>
                <p>Read reviews from fellow readers to help you choose the perfect book.</p>
            </div>
        </div>
    </div>

    <div class="testimonials-section">
        <h2>What Our Users Say</h2>
        <div class="testimonials">
            <div class="testimonial">
                <p>"A fantastic library with an amazing variety of books. Highly recommend!"</p>
                <span>- John Doe</span>
            </div>
            <div class="testimonial">
                <p>"I love how easy it is to order books online. Great service!"</p>
                <span>- Jane Smith</span>
            </div>
        </div>
    </div>

    <div class="contact-section">
        <h2>Contact Us</h2>
        <p>Have any questions? Reach out to us and we'll get back to you shortly.</p>
        <a href="/Contact" class="btn btn-primary">Contact Us</a>
    </div>
</div>

@section Styles {
    <style>
        /* General Layout */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            width: 90%; /* Increased width for better layout */
            max-width: 1200px; /* Max width to prevent too wide layouts */
            margin: 0 auto;
            padding: 30px 0;
        }

        h1, h2, h3 {
            color: #333;
        }

        /* Hero Section */
        .hero-section {
            background-color: #007bff;
            color: white;
            padding: 60px 0;
            text-align: center;
            border-radius: 8px;
            margin-bottom: 40px;
        }

        .hero-content h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .hero-content p {
            font-size: 1.2em;
            margin-bottom: 30px;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        /* Features Section */
        .features-section {
            margin-bottom: 60px;
        }

            .features-section h2 {
                text-align: center;
                margin-bottom: 40px;
            }

        .features {
            display: flex;
            justify-content: space-around;
            text-align: center;
            flex-wrap: wrap; /* Allow items to stack on smaller screens */
        }

        .feature-card {
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 30%;
            margin-bottom: 30px; /* Added margin for better spacing */
        }

            .feature-card h3 {
                margin-bottom: 20px;
            }

        /* Testimonials Section */
        .testimonials-section {
            background-color: #f8f9fa;
            padding: 40px 0;
            margin-bottom: 60px;
        }

        .testimonials {
            display: flex;
            justify-content: space-around;
            text-align: center;
            flex-wrap: wrap; /* Allow items to stack on smaller screens */
        }

        .testimonial {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 45%;
            margin-bottom: 30px;
        }

            .testimonial p {
                font-style: italic;
                margin-bottom: 10px;
            }

            .testimonial span {
                font-weight: bold;
            }

        /* Contact Section */
        .contact-section {
            text-align: center;
            margin-bottom: 60px;
        }

        .feature-card, .testimonial {
            width: 100%; /* Full width for smaller devices */
        }

        
    </style>
}


@section Scripts {
    <script>
        // Simple Scroll Animation
        window.addEventListener('scroll', function () {
            let elements = document.querySelectorAll('.feature-card, .testimonial');
            elements.forEach(function (element) {
                let position = element.getBoundingClientRect().top;
                if (position < window.innerHeight) {
                    element.classList.add('fade-in');
                }
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            let elements = document.querySelectorAll('.feature-card, .testimonial');
            elements.forEach(function (element) {
                element.classList.add('hidden');
            });
        });
    </script>

    <style>
        .fade-in {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 1s, transform 1s;
        }

        .hidden {
            opacity: 0;
            transform: translateY(30px);
        }
    </style>
}
