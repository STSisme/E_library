@model E_Library.Model.Announcement

@{
    ViewData["Title"] = "➕ Create Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">📢 Create Announcement</h2>

<form method="post" action="/Announcement/Create">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Message</label>
        <textarea name="Message" class="form-control" rows="4" required></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Published Date</label>
        <input type="datetime-local" name="PublishedDate" class="form-control"
               value="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <button type="submit" class="btn btn-success">💾 Save</button>
    <a href="/Announcement/Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
