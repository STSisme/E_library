@model E_Library.Model.Book

<div class="card m-2 book-card" style="min-width: 160px; flex: 0 0 auto;">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 200px; object-fit: cover;" />
    <div class="card-body text-center">
        <h6 class="fw-bold">@Model.Title</h6>
        <p class="small text-muted mb-1">@Model.Author</p>
        <a href="/Books/Details/@Model.Book_Id" class="btn btn-sm btn-outline-primary w-100">View</a>
    </div>
</div>
